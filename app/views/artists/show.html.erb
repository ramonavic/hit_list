<h1>
<%= @artist.name%>
</h1>

<table>
  <thead>
    <tr class = "head_table_row">
      <th>Title</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artist.songs.each do |song|%>
      <tr class = "table_rows">
        <td><%= song.title %></td>
        <td><%= song.genre %></td>
        <td><a class = "btn lightgreen" href="https://www.youtube.com/results?search_query=<%=song.title %> <%=song.artist.name%>">Youtube</a></td>
        <td><%= link_to 'Edit', edit_song_path(song), class: "btn amber" %></td>
        <td><%= link_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn red" %></td>
      </tr>

    <% end %>
  </tbody>
</table>
<br>
<div>

<%= link_to 'Edit', edit_artist_path(@artist), class: "btn amber"%>
<%= link_to 'Back', artists_path, class: "btn purple"%>
</div>
