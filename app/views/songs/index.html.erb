<p id="notice"><%= notice %></p>

<h1>Songs</h1>

  <%= form_tag(songs_path, :method => "get", class: "input-field", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Song" %>
    <%= submit_tag "Search", class: "btn amber" %>
  <% end %>
<table>
  <thead>
    <tr class = "head_table_row">
      <th>Title</th>
      <th>Genre</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr class = "table_rows">
        <td><%= song.title %></td>
        <td><%= song.genre %></td>
        <td><%= song.artist.name %></td>
        <td><%= link_to 'Info', song, class: "btn lightgreen" %></td>
        <td><%= link_to 'Edit', edit_song_path(song), class: "btn amber" %></td>
        <td><%= link_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn red" %></td>

      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_song_path, class: "btn lime" %>
